{
  "version": 2,
  "builds": [
    {
      "src": "server/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "src"
      }
    }
  ],
  "routes": [
    {
      "src": "/socket.io/(.*)",
      "dest": "/server/server.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "/server/server.js"
    },
    {
      "src": "^/static/img/(.*)",
      "dest": "/client/static/img/$1"
    },
    {
      "src": "^/static/(.*)",
      "dest": "/client/src/static/$1"
    },
    {
      "src": "^/favicon.ico",
      "dest": "/client/src/favicon.ico"
    },
    {
      "src": "^/manifest.json",
      "dest": "/client/src/manifest.json"
    },
    {
      "src": "^/asset-manifest.json",
      "dest": "/client/src/asset-manifest.json"
    },
    {
      "src": "^/(.*).png",
      "dest": "/client/static/img/$1.png"
    },
    {
      "src": "/(.*)",
      "dest": "/client/src/index.html"
    }
  ]
}
